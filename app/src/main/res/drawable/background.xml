<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >


        <!-- Background color -->
        <solid android:color="#FF9800" />

        <!-- Rounded corners -->
        <corners android:radius="22dp" />

        <!-- Optional shadow-like stroke -->
        <stroke
            android:width="1dp"
            android:color="#CC8800" />

        <!-- Padding inside if needed -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />

</shape>