<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Stock Threshold"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/etThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter quantity (default 5)"
            android:background="@drawable/button_bg_orange"
            android:padding="20dp"
            android:textColor="@color/white"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Frequency"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerFrequency"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:contextClickable="true"
            android:dropDownSelector="@color/white"
            android:outlineAmbientShadowColor="@color/orange"
            android:background="@drawable/button_bg_orange"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_orange"
            android:backgroundTint="@color/orange"
            android:text="Save"
            android:textColor="@android:color/white"/>






    </LinearLayout>

</FrameLayout>